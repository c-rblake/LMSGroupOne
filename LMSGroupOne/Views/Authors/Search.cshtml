@model LMS.Core.Models.ViewModels.API.Author.LibrarySearch
@using LMSGroupOne.Models.MainNavigation



<div id="authorSearchHeadId" class="container m-0 b-0">
    <div class="row d-flex justify-content-center mt-5">
        <div class="col-md-8 md-1">
            <div class="card-deck mb-3 text-center">
                <div class="card mb-4 box-shadow">
                    <div class="card-header">
                        <button class="btn btn-primary btn-lg" onclick="window.location.href='/Authors/GetAuthors'"><h1 class="my-0 font-weight-normal mx-3">Get All Authors</h1></button>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title pricing-card-title">Find in API library <small class="text-muted">/ External</small></h4>
                        <ul class="list-unstyled mt-3 mb-4">
                            <li>Search on Author or Title</li>
                        </ul>
                        <i class="fa fa-book fa-5x"></i>
                        <div>
                            <form id="searchFormId">
                                <div asp-validation-summary="All" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" vale="Nero" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                    <div class="form-group">
                                        <input type="submit" value="Search on Name" class="btn btn-primary" />
                                    </div>
                                </div>
                                @*<button class="btn btn-primary btn-lg" onclick="window.location.href='/Authors/GetAuthor'"><h1 class="my-0 font-weight-normal mx-3">Get All Authors</h1></button>*@
                                @*@Html.DisplayFor(model => model.Message)*@

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button id="createAuthorId" data-item-id="1" data-item-type=@((int)NodeType.author) class="btn btn-outline-primary">Create</button>
</div>



<div id="authorsListId" style="overflow-y:auto;">


</div>