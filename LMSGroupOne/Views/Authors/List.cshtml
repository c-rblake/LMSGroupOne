@model IEnumerable<LMS.Core.Models.ViewModels.AuthorsViewmodel>

@{
    ViewData["Title"] = "GetAuthors";
}


<h1>Search Results <i>@TempData["SearchTerm"]</i></h1>

<table class="table m-0 b-0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Works)

            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateOfDeath)
                </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @foreach (var work in item.Works)
                    {
                        <span>Title:<b> @work.Title.</b>  &emsp;  Description: @work.Description </span><br>
                    }

                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    @Html.ActionLink("Get works", "GetWorks", "Works", new { id = item.Id })*@

                </td>
            </tr>
        }
    </tbody>
</table>
