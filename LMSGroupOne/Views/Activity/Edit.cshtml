@model ActivityEditViewModel

<h6>Module  @ViewBag.module</h6>
<div>
    <form id="formId" asp-action="Edit">

        <input type="hidden" asp-for="Id"/>
        <input type="hidden" asp-for="Message"/>
        <input type="hidden" asp-for="ModuleId"/>
        <input type="hidden" asp-for="ReturnId"/>
        <input type="hidden" asp-for="Success"/>

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ActivityTypeId" class="control-label">Activity Types</label>
            <select asp-for="ActivityTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.activityTypes,"Id","Name"))"></select>
            <span asp-validation-for="ActivityTypeId" class="text-danger"></span>
        </div>
        @*<div class="form-group">
