@model ActivityCreateViewModel
@inject IActivityTypeSelectService service 

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Activity  for @ViewBag.module</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="formId" asp-action="Create">
            <input type="hidden" asp-for="Success">
            <input type="hidden" asp-for="ReturnId">
            <input type="hidden" asp-for="ModuleId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="ActivityTypeId" class="control-label"> Activity types</label>
                <select class="form-control" asp-for="ActivityTypeId" asp-items="@(new SelectList(ViewBag.activityTypes,"Id","Name"))">
                    <option selected="selected">Select type</option>
                </select>
            </div>*@

            <div class="form-group">
                <label asp-for="ActivityTypeId" class="control-label">Activity types</label>
                <select class="form-control" asp-for="ActivityTypeId" asp-items="@await service.GetActivityTypesAsync()">
                    <option selected="selected" value="">Select type</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            @Html.DisplayFor(model => model.Message)
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
