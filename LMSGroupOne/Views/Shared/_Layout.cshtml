@using Microsoft.AspNetCore.Identity
@inject SignInManager<Person> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMSGroupOne</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="container-fluid">
            <div class="row">
                <div class="col-6 bg-primary">
                    <a asp-area="" asp-controller="Home" asp-action="Index" class="LMSGroupOne">LMS Group One</a>
                </div>
                <div class="col-6 bg-primary navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <partial name="_LoginPartial" />
                </div>
            </div>
            @if (SignInManager.IsSignedIn(User))
            {
                <nav class="navbar navbar-expand-lg navbar-light bg-light">

                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Course
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="course" asp-action="create">Create New</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="course" asp-action="edit" asp-route-id="1">Edit Id1</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">List</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Module
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="module" asp-action="createmodule">Create New</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="module" asp-action="editmodule" asp-route-id="1">Edit Id1</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">List</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Activity
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="activity" asp-action="create">Create New</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="activity" asp-action="edit" asp-route-id="1">Edit Id1</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">List</a>
                                </div>
                            </li>

                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Account
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="createaccount">Create New</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="home" asp-action="editaccount" asp-route-id="165284a4-82e8-47c9-902c-7afeab45c459">Edit Id 165284a4-82e8-47c9-902c-7afeab45c459</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#">List</a>
                                </div>
                            </li>
                        </ul>
                        <form class="form-inline my-2 my-lg-0">
                            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                            <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                        </form>
                    </div>
                </nav>
            }
            </div>
        </header>
        <div class="container-fluid">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-dark">
            <div class="container-fluid bg-primary">
                &copy; 2021 - LMSGroupOne
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </body>
</html>
