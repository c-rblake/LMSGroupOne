@model LMS.Core.Models.ViewModels.Module.CreateModuleViewModel

<div>Course: @ViewBag.courseName</div>
<div>Dates: @ViewBag.courseDates</div>
<div><br /></div>
@Html.ValidationSummary(false, "", new { @class = "text-danger" })

<form id="formId" asp-action="CreateModule">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CourseId" />
    <input type="hidden" asp-for="Success">
    <input type="hidden" asp-for="ReturnId">

    <div class="form-group">

        <label asp-for="Name" class="control-label">Module Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StartDate" class="control-label"></label>
        <input asp-for="StartDate" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EndDate" class="control-label"></label>
        <input asp-for="EndDate" class="form-control" />
    </div>

    @Html.DisplayFor(model => model.Message)

</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
