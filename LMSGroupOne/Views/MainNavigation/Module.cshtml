@using LMSGroupOne.Models.MainNavigation
@model ModuleModelView

<div class="container-fluid text-center">
    <h2>Module:</h2>
    <H1>@Model.Name</H1>
    <h4>Starts: @Model.StartDate</h4>
    <h4>Ends: @Model.EndDate</h4>
    <p>@Model.Description</p>

    @if (User.IsInRole("Teacher"))
    {
        <button id="editButtonId" data-item-id=@Model.Id data-item-type=@((int)(NodeType.module)) class="btn btn-outline-primary">Edit</button><br /><br />
        <button id="uploadModuleDocumentsButtonId" data-item-creates=@((int)(NodeType.filemodule)) data-item-parent-id=@Model.Id data-item-extra="new" data-item-parent-type=@((int)(NodeType.module)) data-item-id=@Model.Id data-item-type=@((int)(NodeType.filemodule)) class="btn btn-outline-primary">Upload</button>
    }


</div>